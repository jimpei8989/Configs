parse_git_branch() {
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

if [[ "$TERM" =~ screen ]]; then
    PS1="\[\033[38;5;32m\]\u\[\033[38;5;251m\]@\[\033[38;5;35m\]\h\[\033[38;5;251m\]: \[\033[38;5;184m\]\w\[\033[38;5;214m\]\$(parse_git_branch)\[\033[38;5;251m\]\n$ \[\033[0m\]"
elif [[ "$TERM" =~ 256color ]]; then
    PS1="\[\033[38;5;32m\]\u\[\033[38;5;251m\]@\[\033[38;5;35m\]\h\[\033[38;5;251m\]: \[\033[38;5;184m\]\W\[\033[38;5;214m\]\$(parse_git_branch)\[\033[38;5;251m\]$ \[\033[0m\]"
else
    PS1="\[\e[40m\]\[\e[0;37m\]\u@\h: \W$ "
fi

