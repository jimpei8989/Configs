NormColor="\[\033[38;5;251m\]"
UserColor="\[\033[38;5;32m\]"
HostColor="\[\033[38;5;35m\]"
WDirColor="\[\033[38;5;184m\]"
GitBColor="\[\033[38;5;214m\]"

parse_git_branch() {
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

if [[ "$TERM" =~ screen ]]; then
    PS1="${UserColor}\u${NormColor}@${HostColor}\h${NormColor}: ${WDirColor}\w${GitBColor}\$(parse_git_branch)${NormColor}\n$ \[\033[0m\]"
elif [[ "$TERM" =~ 256color ]]; then
    PS1="${UserColor}\u${NormColor}@${HostColor}\h${NormColor}: ${WDirColor}\W${GitBColor}\$(parse_git_branch)${NormColor}$ \[\033[0m\]"
else
    PS1="\[\e[40m\]\[\e[0;37m\]\u@\h: \W$ "
fi

# LS_COLORS="di=0;34:ex=1;92:ln=0;35"
# export LS_COLORS

alias SRC="source ~/.bash_profile"

alias la="ls -al"
alias ll="ls -l"

alias vi="vim"

# tmux

alias ta="tmux a"

# Git
alias gs="git status"
alias gl="git log"
alias gl1="git log --oneline"
alias glg="git log --oneline --graph"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
